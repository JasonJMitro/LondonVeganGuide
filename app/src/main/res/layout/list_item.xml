<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height">

    <ImageView
        android:id="@+id/ic_link"
        android:layout_width="@dimen/standard_icon_dim"
        android:layout_height="@dimen/standard_icon_dim"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/standard_marg_pad" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_height"
        android:layout_toLeftOf="@id/image"
        android:layout_toRightOf="@id/ic_link"
        android:gravity="center"
        android:padding="@dimen/standard_marg_pad" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_height"
        android:layout_height="@dimen/list_height"
        android:layout_alignParentRight="true" />

</RelativeLayout>